# Dayflow CDSS - Deployment Environment Variables
# Copy this file to .env and fill in your values

# Azure VM Configuration
AZURE_VM_HOST=your-vm-ip-or-domain.com
AZURE_VM_USER=azureuser

# Docker Registry
REGISTRY=ghcr.io
BACKEND_IMAGE=ghcr.io/your-username/dayflow/backend:latest
FRONTEND_IMAGE=ghcr.io/your-username/dayflow/frontend:latest

# Application URLs
API_URL=https://your-domain.com/api
VITE_API_URL=https://your-domain.com/api

# SSL (for production)
SSL_CERT_PATH=/opt/dayflow/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/opt/dayflow/nginx/ssl/privkey.pem
